<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/surface_light"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Ícono de la cuenta -->
        <ImageView
            android:id="@+id/ivIconoCuenta"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/purple_light"
            android:src="@drawable/ic_cuentas"
            app:tint="@color/purple_primary" />

        <!-- Datos principales -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nombre de la cuenta -->
            <TextView
                android:id="@+id/tvNombreCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuenta BCP"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <!-- Tipo y moneda -->
            <TextView
                android:id="@+id/tvTipoCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Débito • PEN"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Saldo o deuda -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvSaldoCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/. 1,250.00"
                android:textStyle="bold"
                android:textColor="@color/blue_dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvEstadoCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponible"
                android:textColor="@color/success"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
