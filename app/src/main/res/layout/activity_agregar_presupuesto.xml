<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_budget_title"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:layout_marginBottom="24dp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_month_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/month_label"
            android:textAppearance="?attr/textAppearanceLabelLarge"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_month_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="2025-10"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_calendar"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/month_selection_description"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tv_amount_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/amount_label"
            android:textAppearance="?attr/textAppearanceLabelLarge"
            android:layout_marginBottom="4dp"
            android:labelFor="@id/et_amount" />

        <EditText
            android:id="@+id/et_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/amount_hint"
            android:imeOptions="actionDone"
            android:padding="16dp"
            android:layout_marginBottom="32dp"
            android:autofillHints="money" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="?attr/buttonBarStyle">


            <Button
                android:id="@+id/btnDelete"
                style="?attr/buttonBarNegativeButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/delete_button"
                android:visibility="gone"
                tools:visibility="visible" />


            <Space
                android:id="@+id/space_delete"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancel_button"
                style="?attr/buttonBarNegativeButtonStyle" />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/save_button"
                style="?attr/buttonBarPositiveButtonStyle" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>